{
  "name": "pulsate",
  "version": "0.0.1",
  "description": "Easy-to-change, faster, developer friendly next generation decentralized social media.",
  "type": "module",
  "main": "./build/main.js",
  "license": "Apache-2.0",
  "keywords": [],
  "packageManager": "pnpm@10.26.0",
  "author": {
    "name": "pulsate-dev",
    "email": "info@pulsate.dev"
  },
  "engines": {
    "node": "24.12.0"
  },
  "scripts": {
    "start": "node --env-file=.env --enable-source-maps ./build/main.js",
    "build": "node ./scripts/build.js",
    "build:api": "node ./build/scripts/apidoc.js",
    "build:prisma": "prisma generate",
    "clean": "rm -r ./build",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check:type": "tsc -p .",
    "check:filename": "ls-lint",
    "check:format": "biome format .",
    "prepare": "pnpm run build:prisma",
    "postinstall": "lefthook install"
  },
  "dependencies": {
    "@hono/node-server": "^1.7.0",
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^1.0.0",
    "@mikuroxina/mini-fn": "^7.0.0",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "7.1.0",
    "@scalar/hono-api-reference": "^0.9.0",
    "@upyo/core": "^0.3.0",
    "@upyo/smtp": "^0.3.0",
    "argon2": "^0.44.0",
    "blurhash": "^2.0.5",
    "file-type": "^21.0.0",
    "hono": "^4.10.3",
    "ioredis": "^5.4.1",
    "jose": "^6.0.0",
    "pg": "^8.16.3",
    "prisma": "^7.0.0",
    "sharp": "^0.34.0",
    "tslog": "^4.9.3"
  },
  "peerDependencies": {
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@ls-lint/ls-lint": "^2.2.3",
    "@types/node": "^24.0.0",
    "@types/pg": "^8.15.6",
    "@vitest/coverage-v8": "^4.0.0",
    "esbuild": "^0.27.0",
    "glob": "^13.0.0",
    "ignore": "^7.0.0",
    "kleur": "^4.1.5",
    "lefthook": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.0"
  }
}
